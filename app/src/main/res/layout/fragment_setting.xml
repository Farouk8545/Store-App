<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/privacy_security_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="center"
            android:text="@string/setting1"
            android:textColor="@color/Purple"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

            <LinearLayout
                android:id="@+id/account_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:elevation="8dp"
                android:background="?attr/colorSurface"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/accountsetting"
                    android:contentDescription="Account Settings Icon" />

                <Button
                    android:id="@+id/account_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/account_setting"
                    android:textColor="?attr/android:textColorPrimary"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    style="@style/Widget.MaterialComponents.CardView"
                    />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/notification_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:elevation="8dp"
                android:background="?attr/colorSurface"
                android:layout_marginTop="16dp">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/notification_setting"
                    android:background="@android:color/transparent"
                    android:contentDescription="notification Settings Icon" />

                <Button
                    android:id="@+id/notification_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/notification_setting"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/android:textColorPrimary"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/Widget.MaterialComponents.CardView"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/privacy_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                android:background="?attr/colorSurface"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/privacy"
                    android:background="@android:color/transparent"
                    android:contentDescription="privacy Settings Icon" />

                <Button
                    android:id="@+id/privacy_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/privacy_security"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/android:textColorPrimary"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/Widget.MaterialComponents.CardView"
                    />
            </LinearLayout>


        <!-- Language Selection -->


            <LinearLayout
                android:id="@+id/language_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                android:background="?attr/colorSurface"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/language_setting"
                    android:background="@android:color/transparent"
                    android:contentDescription="language Settings Icon" />

                <Button
                    android:id="@+id/language_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/language"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/android:textColorPrimary"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/Widget.MaterialComponents.CardView"
                    />
            </LinearLayout>


        <!-- Help & Support -->


            <LinearLayout
                android:id="@+id/help_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                android:background="?attr/colorSurface">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/help"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    android:contentDescription="help Settings Icon" />

                <Button
                    android:id="@+id/help_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/help_support"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/android:textColorPrimary"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/Widget.MaterialComponents.CardView"
                    />
            </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</layout>
